
<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :firstname %>
    <%= f.input :middlename %>
    <%= f.input :surname %>
    <%= f.input :gender %>
    <%= f.input :phonenumber %>
    <%= f.input :dob %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
